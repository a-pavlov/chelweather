<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="72dp"
    android:layout_width="96dp"
    android:id="@+id/WidgetLayout"
    android:padding="8dp"
    android:background="@drawable/shape_view_frame">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/widget_text"
        android:textColor="@color/colorText"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/rs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_sign"
        android:textColor="@color/colorText"
        android:layout_toRightOf="@id/tv"
        android:layout_alignParentTop="true"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_char"
        android:textColor="@color/colorText"
        android:layout_toRightOf="@id/rs"
        android:layout_alignParentTop="true"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:text="@string/pressure"
        android:textColor="@color/colorText"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/pressure_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pressure"
        android:layout_alignBottom="@id/pressure"
        android:text="@string/pressure_type"
        android:textColor="@color/colorText"
        android:textSize="12sp"/>
</RelativeLayout>